{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Waf Build",
            "type": "shell",
            "command": "python waf build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "clang",
                "fileLocation": [ "relative", "${workspaceFolder}/build" ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "Waf Clean",
            "type": "shell",
            "command": "python waf clean"
        },
        {
            "label": "Waf Rebuild",
            "type": "shell",
            "command": "python",
            "args": [
                "waf", "clean", "build"
            ]
        },
        {
            "label": "Waf Configure w/ CCache",
            "type": "shell",
            "command": "python",
            "args": [
                "waf",
                "configure",
                "--debug"
            ],
            "options": {
                "env": {
                    "CC": "ccache clang",
                    "CXX": "ccache clang++"
                }
            }
        },
        {
            "label": "echo",
            "type": "shell",
            "command": "python waf build"
        }
    ]
}
