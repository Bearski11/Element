{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Element",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "program": "${workspaceRoot}/build/bin/element",
            "cwd": "${workspaceRoot}/build",
            "environment": [{ "name": "LD_LIBRARY_PATH", "value": "${workspaceRoot}/build/lib" }],
            "externalConsole": false,
            "stopAtEntry": false,
            "preLaunchTask": "Waf Build",
            "linux": {
                "MIMode": "gdb",
                "program": "${workspaceRoot}/build/bin/element",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb",
                "program": "${workspaceRoot}/build/Applications/Element.app/Contents/MacOS/Element",
                "logging": {
                    "moduleLoad": false,
                    "exceptions": false,
                }
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ],
                "program": "${workspaceRoot}/build/Element.exe",
            },
        },
        {
            "name": "Test Suite",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/bin/test-element",
            "args": [ "Lua" ],
            "cwd": "${workspaceRoot}/build",
            "preLaunchTask": "Waf Build",
            "linux": {
                "MIMode": "gdb",
                "logging": {
                    "moduleLoad": false,
                    "exceptions": false
                },
                "environment": [ { "name": "LD_LIBRARY_PATH", "value": "${workspaceRoot}/build/lib" } ],
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb",
                "logging": {
                    "moduleLoad": false,
                    "exceptions": false,
                }
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}
